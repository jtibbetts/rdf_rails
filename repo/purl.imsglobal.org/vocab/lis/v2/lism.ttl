@prefix lism: <http://purl.imsglobal.org/vocab/lis/v2/mm#> .
@prefix org: <http://www.w3.org/ns/org#> .
@prefix lisp: <http://purl.imsglobal.org/vocab/lis/v2/pm#> .
@prefix ldp: <http://www.w3.org/ns/ldp#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix bind: <http://purl.org/semantictools/v1/vocab/bind#> .
@prefix vann: <http://purl.org/vocab/vann#> .

<http://purl.imsglobal.org/vocab/lis/v2/mm#> a owl:Ontology  ;
  rdfs:label "LIS Membership Management" ;
  a bind:TargetNamespace ;
  bind:suggestedPrefix "lism" .

lism:LISMembership rdf:type owl:Class ;
  rdfs:subClassOf org:Membership ,
  [ a owl:Restriction ;
    owl:onProperty      org:member;
    owl:allValuesFrom  lisp:LISPerson;
    owl:minCardinality  1;
    owl:maxCardinality  1
  ] ,
  [ a owl:Restriction ;
    owl:onProperty      org:organization;
    owl:allValuesFrom  org:Organization;
    owl:minCardinality  1;
    owl:maxCardinality  1;
    rdfs:comment "Indicates the orgination in which the person has a membership."
  ] ,
  [ a owl:Restriction ;
    owl:onProperty      org:role;
    owl:allValuesFrom  lism:LISRole;
    owl:minCardinality  1;
    owl:maxCardinality  1;
    rdfs:comment "Indicates the role that the Person has within the Organization."
  ] ; 
  rdfs:comment """<code>LISMembership</code> is a specialized form of the W3C <code>Membership</code> class. It has the following restrictions:
<UL>
<LI> The agent must be an LISPerson with maximum cardinality 1.
<LI> The organization has maximum cardinality 1.
<LI> The role must be an LISRole with maximum cardinality 1.
</UL>
If a Person has more than one role within an Organization, then that person will have multiple LISMemberships linking that Person to the Organization, each with a different role.""" .

lism:LISRole rdf:type owl:Class ;
  rdfs:subClassOf org:Role ; 
  rdfs:comment "A Role that is also a Property whose domain is restricted to the Organization class and whose range is restricted to the Person class." .

lism:LISMembershipContainer rdf:type owl:Class ;
  rdfs:subClassOf ldp:Container ,
  [ a owl:Restriction ;
    owl:onProperty      ldp:membershipPredicate;
    owl:hasValue lism:membership
  ] ,
  [ a owl:Restriction ;
    owl:onProperty      ldp:membershipSubject;
    owl:allValuesFrom  org:Organization
  ] ; 
  rdfs:comment "A container that holds a collection of Membership resources." .

lism:Learner rdf:type rdf:Property, lism:LISRole .

lism:Instructor rdf:type rdf:Property, lism:LISRole .

lism:TeachingAssistant rdf:type rdf:Property, lism:LISRole .

lism:NonCreditLearner rdf:type rdf:Property ;
  rdfs:subPropertyOf lism:Learner .

lism:GuestLearner rdf:type rdf:Property ;
  rdfs:subPropertyOf lism:Learner .

lism:ExternalLearner rdf:type rdf:Property ;
  rdfs:subPropertyOf lism:Learner .

lism:PrimaryInstructor rdf:type rdf:Property ;
  rdfs:subPropertyOf lism:Instructor .

lism:SecondaryInstructor rdf:type rdf:Property ;
  rdfs:subPropertyOf lism:Instructor .

lism:Lecturer rdf:type rdf:Property ;
  rdfs:subPropertyOf lism:Instructor .

lism:GuestInstructor rdf:type rdf:Property ;
  rdfs:subPropertyOf lism:Instructor .

lism:ExternalInstructor rdf:type rdf:Property ;
  rdfs:subPropertyOf lism:Instructor .

lism:membership rdf:type rdf:Property ;
  rdfs:domain org:Organization ;
  rdfs:range org:Membership ;
  owl:inverseOf org:organization ;
  rdfs:comment "A membership entity that records the role of some Person within this Organization." .

